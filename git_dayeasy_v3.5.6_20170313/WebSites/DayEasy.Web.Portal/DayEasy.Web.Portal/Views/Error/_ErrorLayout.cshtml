@using DayEasy.Core

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var url = ViewBag.returnUrl ?? Consts.Config.MainSite;
    var text = ViewBag.returnText ?? "得一首页";
}
<div class="w1200 f-cb ">
    <div class="error-box">

        <div class="error-box-one">
            @RenderBody()
        </div>
        <div class="error-box-two">
            <span id="totalSecond">5</span>
            秒后自动返回 <a title="@text" href="@url">@text</a>
        </div>
    </div>
</div>
@section css{
    <style>
        .error-box {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 666px;
            height: 200px;
            margin-left: -333px;
            margin-top: -167.5px;
        }

        .error-box-one {
            text-align: center;
            font-size: 24px;
            margin-top: 50px;
            color: #333;
        }

        .error-box-two {
            text-align: center;
            margin-top: 20px;
            color: #999;
            font-size: 14px;
        }

            .error-box-two a {
                color: #3bafda;
            }

                .error-box-two a:hover {
                    color: #4fc1e9;
                }

        #totalSecond {
            font-family: monospace;
            font-size: 14px;
            font-weight: 600;
            color: #ed5565;
        }
    </style>
}
@section js{
    <script type="text/javascript">
        (function ($, S) {
            var $time = $('#totalSecond'),
                second = ~~$time.html() || 5,
                timer = S.later(function () {
                    second--;
                    if (second <= 0) {
                        location.href = $time.next().attr('href');
                        timer.cancel();
                    } else {
                        $('#totalSecond').html(second);
                    }
                }, 1000, true);
        })(jQuery, SINGER);
    </script>
}
