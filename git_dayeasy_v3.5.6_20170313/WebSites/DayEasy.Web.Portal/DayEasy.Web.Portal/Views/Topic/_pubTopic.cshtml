<script type="text/html" id="voteDetailTemp">
    <div class="comment-vote">
        <div class="edit-vote">
            <span id="deleteVote">删除</span>
            <span id="editVote">编辑</span>
        </div>
        <div class="box">
            <div class="box-lg-12 vote-title" id="title"></div>
            <div class="box-lg-12">
                <div class="box-lg-12 vote-checkbox">
                    <ul id="voteOptions"></ul>
                </div>
             
            </div>
        </div>
