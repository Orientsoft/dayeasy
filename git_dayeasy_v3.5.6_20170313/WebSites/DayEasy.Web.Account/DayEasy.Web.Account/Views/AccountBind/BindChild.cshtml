@{
    ViewBag.Title = "关联学生帐号";
    var studentId = ViewBag.StudentId ?? 0;
}
<div class="w1200 f-cb content-wrap">
    <div class="cont-min" data-id="@studentId">
        <h2>家长您好，请关联学生帐号以便使用相应功能</h2>
        <div class="bind-box">
            <div class="dy-form-group bordered">
                <i class="iconfont dy-icon-49"></i>
                <input type="email" id="account" placeholder="学生登录邮箱/手机号" />
            </div>
            <div class="dy-form-group bordered">
                <i class="iconfont dy-icon-56"></i>
                <input type="password" id="pwd" placeholder="学生登录密码" />
            </div>
            <div class="dy-form-group">
                <button type="button" id="btnLoad" class="dy-btn dy-btn-info">关联</button>
            </div>
            <div class="dy-form-group plat-group">
                <span class="dy-plat-title">第三方登录：</span>
                <ul class="dy-plat-list">
                    <li>
                        <a href="#" title="QQ登录" data-type="0">
                            <i class="iconfont dy-icon-31 icon-bg"></i>
                            <i class="iconfont dy-icon-41 icon-tag"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
@section css{
    @Html.CombineLink("v3/css/account/bind-student.css")
}
@section js{
    @Html.CombineLink("v3/js/account/page-bindstudent.js")
}