@{
    ViewBag.Title = "师生画像";
}

<div class="dy-main-wrap">
    @Html.Partial("_Navigation", 1)
    <div class="dy-list" data-aid="@ViewBag.AgencyId">
        <div class="page-elective-draw">
            <div class="ui-tab-nav">
                <ul class="f-cb">
                    <li class="on first" data-area="0">最近一周</li>
                    <li data-area="1">最近一个月</li>
                    <li data-area="2">最近3个月</li>
                    <li class="last" data-area="3">最近6个月</li>
                </ul>
            </div>
            <div class="tab-nav-content">
                <div class="tab-con-list tab-con-1" style="display: block;">
                    <!--师生登录情况-->
                    <div class="login-chart">
                        <h3 class="panel-title">
                            师生登录情况
                        </h3>
                        <div id="container-area-draw">
                            <div class="dy-loading"><i></i>
                            </div>
                        </div>
                    </div>
                    <!--End-->
                    <!--画像-->
                    <div class="box-painting f-cb">
                        <div class="teacher-painting f-fl">
                            <h3 class="panel-title">教师画像</h3>
                            <table class="dy-table">
                                <tr>
                                    <td>
                                        <div class="text">平均登录次数</div>
                                        <div class="num">--</div>
                                    </td>
                                    <td>
                                        <div class="text">平均完成批阅(次)</div>
                                        <div class="num">--</div>
                                    </td>
                                </tr>
                            </table>
                            <div class="wrap-chart">
                                <div id="container-chart-left" style="min-width: 300px; height: 300px">
                                    <div class="dy-loading"><i></i>
                                    </div>
                                </div>
                                <img class="pos-img" src="@Url.StaticLink("/v3/image/ea/teacher-h.png")" style="display:none" alt="">
                            </div>

                        </div>
                        <div class="student-painting f-fr">
                            <h3 class="panel-title">学生画像</h3>
                            <table class="dy-table">
                                <tr>
                                    <td>
                                        <div class="text">平均登录次数</div>
                                        <div class="num">--</div>
                                    </td>
                                    <td>
                                        <div class="text">平均考试次数</div>
                                        <div class="num">--</div>
                                    </td>
                                    <td>
                                        <div class="text">平均新增错题(道)</div>
                                        <div class="num">--</div>
                                    </td>
                                </tr>
                            </table>
                            <div class="wrap-chart">
                                <div id="container-chart-right" style="min-width: 300px; height: 300px">
                                    <div class="dy-loading"><i></i>
                                    </div>
                                </div>
                                <img class="pos-img" src="@Url.StaticLink("/v3/image/ea/student-h.png")" style="display:none" alt="">
                            </div>
                        </div>
                    </div>
                    <!--画像 End-->
                    <!--打卡达人-->
                    <div class="punch-master f-cb mb20">
                        <dl class="dl-list special-box-1">
                            <dt class="panel-title">
                                打卡达人
                            </dt>
                            <dd>
                                <div class="dy-loading">
                                    <i></i>
                                </div>
                            </dd>
                        </dl>
                        <dl class="dl-list special-box-2">
                            <dt class="panel-title">
                                勤劳榜
                            </dt>
                            <dd>
                                <div class="dy-loading">
                                    <i></i>
                                </div>
                            </dd>
                        </dl>
                        <dl class="dl-list last special-box-3">
                            <dt class="panel-title">
                                人气榜
                            </dt>
                            <dd>
                                <div class="dy-loading">
                                    <i></i>
                                </div>
                            </dd>
                        </dl>
                    </div>
                    <!--打卡达人 ENd-->
                </div>
                <!--<div class="tab-con-list tab-con-2">2</div>-->
                <!--<div class="tab-con-list tab-con-3">3</div>-->
            </div>
        </div>
    </div>
</div>
<script type="text/html" id="rankTpl">
    <table>
        <colgroup>
            <col style="width: 5em" />
            <col style="width: 5em" />
            <col style="width: 30em" />
            <col style="width: 10em" />
        </colgroup>
        <tbody>
            {{each ranks as item}}
            <tr>
                <td>{{item.rank}}</td>
                <td>
                    <img class="f-fl"
                         width="36" height="36"
                         src="{{item.avatar}}" alt="{{item.name}}">
                </td>
                <td>
                    {{item.name}}
                </td>
                <td>
                    <span class="f-db f-tac text-1">{{item.count}}</span>
                    <span class="f-db f-tac text-2">{{rankStandard}}</span>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>

@section css{
    @Html.CombineLink("v3/css/ea/ui-base.css", "v3/css/ea/statistics/page-elective-draw.css")
}

@section js{
    @Html.CombineLink("js/artTemplate.min.js", "v3/plugs/highcharts/highcharts.min.js", "v3/js/ea/statistics/page-elective-draw.js")
}
