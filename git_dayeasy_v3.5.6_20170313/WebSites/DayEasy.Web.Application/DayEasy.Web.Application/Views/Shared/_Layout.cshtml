            else
            {
                <ul class="ul-right f-fr ul-user-box">
                    <li class="head-user-notlogged">
                        @{
                var raw = Utils.RawUrl();
                var showLogin = !raw.Contains(Consts.Config.LoginSite);
                var showReg = !raw.Contains(Consts.Config.RegisterSite);
