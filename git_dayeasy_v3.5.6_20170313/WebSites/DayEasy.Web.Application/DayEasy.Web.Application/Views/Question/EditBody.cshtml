@{
    var id = ViewData["id"] as string;
    var body = ViewData["body"] as string;
}
<div class="q-edit-body" data-qid="@id">
    <script id="qContent" type="text/plain">
        @Html.Raw(body)
    </script>
</div>
<div class="q-edit-btn">
    <button class="btn btn-primary" id="saveBody">
        <i class="fa fa-chevron-circle-left"></i>
        确认保存
    </button>
</div>